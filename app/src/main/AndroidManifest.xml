<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Разрешения если нужны -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.MenuManager"
        tools:targetApi="31"
        tools:ignore="GoogleAppIndexingWarning">

        <!-- Главная активность - выбор роли -->
        <activity
            android:name=".RoleSelectionActivity"
            android:exported="true"
            android:label="Выбор роли">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Активность входа -->
        <activity
            android:name=".LoginActivity"
            android:label="Вход в систему"
            android:exported="false" />

        <!-- АДМИНИСТРАТОРСКИЕ АКТИВНОСТИ -->

        <!-- Управление меню -->
        <activity
            android:name=".ManageMenuActivity"
            android:label="Управление меню"
            android:exported="false" />

        <!-- Стоп-лист (админская версия) -->
        <activity
            android:name=".AdminStopListActivity"
            android:label="Стоп-лист"
            android:exported="false" />

        <!-- Управление ингредиентами -->
        <activity
            android:name=".IngredientsActivity"
            android:label="Управление ингредиентами"
            android:exported="false" />

        <!-- КЛИЕНТСКИЕ АКТИВНОСТИ -->

        <!-- Клиентское меню -->
        <activity
            android:name=".ClientMenuActivity"
            android:label="Меню"
            android:exported="false" />

        <!-- Корзина -->
        <activity
            android:name=".CartActivity"
            android:label="Корзина"
            android:exported="false" />

        <!-- Избранное -->
        <activity
            android:name=".FavoritesActivity"
            android:label="Избранное"
            android:exported="false" />

        <!-- ОБЩИЕ АКТИВНОСТИ -->

        <!-- Старая активность стоп-листа (если нужно оставить для совместимости) -->
        <activity
            android:name=".StopListActivity"
            android:label="Стоп-лист"
            android:exported="false" />

        <!-- Дополнительные активности если есть -->
        <activity
            android:name=".ClientActivity"
            android:label="Клиент"
            android:exported="false" />

    </application>

</manifest>